{{~it.results :syllables }}
  <div class="syllables">
    <div class="syllable">
      {{=syllables.syllables}}
    </div>
    <div class="rhymes">
      {{~syllables.rhymes :rhyme }}
        <div class="rhyme">
          {{~rhyme.words :word:index }}
            <span style="{{=word.style}}">{{=word.word}}</span>{{? index < rhyme.words.length - 1 }}<span class="punc">,</span>{{?}}
          {{~}}
        </div>
      {{~}}
    </div>
  </div>
{{~}}
